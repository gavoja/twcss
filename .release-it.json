{
  "$schema": "https://unpkg.com/release-it@18/schema/release-it.json",
  "git": {
    "commit": true,
    "push": true,
    "tag": true,
    "commitMessage": "chore: release v${version}"
  },
  "github": {
    "release": true,
    "tokenRef": "GITHUB_TOKEN_TWCSS"
  },
  "npm": {
    "publish": true
  },
  "hooks": {
    "before:init": [
      "npm run lint",
      "npm run generate-reference",
      "npm test",
      "npm run build"
    ]
  }
}
