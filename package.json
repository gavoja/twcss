{
  "name": "twcss",
  "version": "0.3.2",
  "main": "src/main/twcss.js",
  "author": "Michal Kochel",
  "license": "MIT",
  "type": "module",
  "description": "Fast minimalist utility-first CSS runtime inspired by Tailwind and Twind",
  "keywords": [
    "css",
    "utility-first",
    "tailwind",
    "twind",
    "tw-in-js",
    "tailwind-in-js"
  ],
  "imports": {
    "#main/*.js": "./src/main/*.js"
  },
  "scripts": {
    "start": "node ./src/tools/build.js",
    "test": "npx playwright test",
    "lint": "npx @biomejs/biome format",
    "format": "npx @biomejs/biome format --write",
    "reference": "node ./src/tools/reference.js",
    "release": "dotenv release-it --"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@playwright/test": "1.51.1",
    "chroma-js": "3.1.2",
    "dotenv": "16.4.7",
    "dotenv-cli": "8.0.0",
    "esbuild": "0.25.1",
    "playwright": "1.51.1",
    "release-it": "18.1.2"
  }
}
