{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "linter": {
    "rules": {
      "complexity": {
        "noForEach": "off"
      }
    }
  },
  "javascript": {
    "formatter": {
      "semicolons": "asNeeded",
      "quoteStyle": "single",
      "arrowParentheses": "asNeeded",
      "lineWidth": 120,
      "indentStyle": "space",
      "lineEnding": "lf",
      "quoteProperties": "preserve"
    }
  },
  "json": {
    "formatter": {
      "indentStyle": "space",
      "lineEnding": "lf"
    }
  },
  "files": {
    "include": ["!target/**/*"]
  }
}
